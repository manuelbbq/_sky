{% block body %}

    {% for user in users %}
        <span>{{ user.name }}</span>
        <a href="{{ path('app_user',{id: user.id}) }}">Show</a>
        {% if is_granted('POST_EDIT', user ) %}
        <a href="{{ path('app_edit_user',{id: user.id}) }}">Edit</a>
        {% endif %}
        <br>
    {% endfor %}

{% endblock %}

